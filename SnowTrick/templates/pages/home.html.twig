{% extends 'base.html.twig' %}

{% block body %}
<div class="container">
    <h2>Les Figures </h2>
  <div class="row flex">
    {% for trick in tricks %}
      <div class="col-3">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title">
              <a href="{{ path('figures.view', {id: trick.id, name: trick.name}) }}">{{ trick.name }}</a>
            </h5>
            <p class="card-text">{{ trick.description }}</p>
          </div>
        </div>
      </div>
    {% endfor %}
  </div>
</div>
{% endblock %}
