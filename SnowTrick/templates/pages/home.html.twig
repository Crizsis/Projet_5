{% extends 'base.html.twig' %}

{% block body %}
<div class="container mt-4">
    <h2>Les Figures </h2>
    {% for message in app.flashes('success') %}
    <div class="alert alert-success">
      {{ message }}
    </div>
    {% endfor %}
  <div class="row flex mt-4">
    {% for trick in tricks %}
      <div class="col-lg-3 mt-4">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title">
              <a href="{{ path('figures.view', {id: trick.id, name: trick.name}) }}">{{ trick.name }}</a>
            </h5>
            <a href="{{ path('user.trick.edit', {id: trick.id, name: trick.name}) }}"><img src="img/edit.png" alt="EditPencil" class="text-right" /></a>
            <p class="card-text">{{ trick.description }}</p>
          </div>
        </div>
      </div>
    {% endfor %}
  </div>
</div>
{% endblock %}
